<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wantedbug.cuesense.SettingsActivity" >

    <TextView
        android:id="@+id/twitterTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/settings_title_horizontal_margin"
        android:layout_marginTop="@dimen/settings_tw_group_margin_top"
        android:text="@string/title_twitter"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnLoginTwitter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/twitterTitle"
        android:layout_marginLeft="@dimen/settings_twitter_button_horizontal_margin"
        android:layout_marginRight="@dimen/settings_twitter_button_horizontal_margin"
        android:layout_marginTop="@dimen/settings_group_elem_vertical_margin"
        android:text="@string/tw_log_in_with" />

    <Button
        android:id="@+id/btnLogoutTwitter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLoginTwitter"
        android:layout_marginLeft="@dimen/settings_twitter_button_horizontal_margin"
        android:layout_marginRight="@dimen/settings_twitter_button_horizontal_margin"
        android:layout_marginTop="@dimen/settings_group_elem_vertical_margin"
        android:text="@string/tw_log_out_from"
        android:visibility="gone" />

    <TextView
        android:id="@+id/lblUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogoutTwitter"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/settings_helptext_horizontal_margin"
        android:layout_marginRight="@dimen/settings_helptext_horizontal_margin"
        android:layout_marginTop="@dimen/settings_group_elem_vertical_margin"
        android:gravity="center"
        android:text="@string/tw_login_explanation"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>